
  <div class="column">
    <div class="card1">
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure>
              <img  src="<%=@comic.thumbnail_path%>.<%=@comic.thumbnail_extension%>" alt="<%=@comic.title%>" width="300px" />
            </figure>
            </div>
          <div class="media-content">

            <p class="title is-4"><%=link_to @comic.title, @comic%></p>
            <p><%=@comic.description%></p>
            <br>
            <p>Pages: <%=@comic.page_count%></p>
          </div>
        </div>
      </div>

    </div>
  <footer class="card-footer">
    <p class="card-footer-item">
    Characters:

    <p class="card-footer-item">
    Series:

    <p class="card-footer-item">
    Stories:
  </footer>

</div>
<div>
<% if @comic.character_comics.empty?%>
      <p>No characters listed for <%= @comic.name %></p>
    <% else %>
      <ul>
        <% if @comic.character_comics.each do |characterComic| %>
          <li>
            <%= link_to characterComic.hero.name, characterComic.hero%>
          </li>
        <% end %>
        <%end%>
      </ul>
    <% end %>
    </div>


