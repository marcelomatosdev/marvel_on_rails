
<%=render partial: 'comics/search_form'%>
<br>
<p class="subtitle is-7">
Found <%=pluralize(@comics.size, 'result')%>
for the search term "<%=params[:search_term] %>".
</p>
<div class="columns is-multiline">
<%@comics.each do |comic|%>
  <div class="column is-one-third">
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure>
              <img src="<%=comic.thumbnail_path%>.<%=comic.thumbnail_extension%>" alt="<%=comic.title%>" width="100px"/>
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-5"><%=link_to comic.title, comic%></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<%end%>
</div>
