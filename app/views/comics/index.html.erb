



<%@comics.each do |comic|%>
  <div class="column">
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure>
              <img src="<%=comic.thumbnail_path%>.<%=comic.thumbnail_extension%>" alt="<%=comic.title%>" width="100px"/>
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4"><%=link_to comic.title, comic%></p>
          </div>
        </div>

      </div>
    </div>
  </div>
<%end%>