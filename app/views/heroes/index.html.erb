<ul>
<%@heroes.each do |hero|%>

  <div class="column is-4">
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure >
              <img src="<%=hero.thumbnail_path%>.<%=hero.thumbnail_extension%>" alt="<%=hero.name%>" width="100px"/>
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4"><%=link_to hero.name, hero%></p>
            <p> <%=hero.description%></p>
          </div>
        </div>
       </div>
    </div>
  </div>

<%end%>
</ul>